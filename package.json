{
  "name": "crosschain-escrow",
  "version": "1.0.0",
  "private": true,
  "description": "Cross-chain freelance escrow platform with installment support",
  "scripts": {
    "dev": "pnpm --filter @crosschain-escrow/frontend dev",
    "build": "pnpm -r build",
    "compile": "pnpm --filter @crosschain-escrow/contracts compile",
    "deploy": "pnpm --filter @crosschain-escrow/contracts deploy",
    "test": "pnpm --filter @crosschain-escrow/contracts test",
    "clean": "pnpm -r clean && rm -rf node_modules"
  },
  "keywords": [
    "escrow",
    "cross-chain",
    "freelance",
    "blockchain",
    "ethereum"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^3.0.0",
    "@types/node": "^20.19.32",
    "dotenv": "^17.2.4",
    "hardhat": "^3.1.7",
    "typescript": "^5.3.3"
  }
}
